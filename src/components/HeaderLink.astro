---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive =
  href === pathname ||
  href === pathname.replace(/\/$/, "") ||
  `${import.meta.env.BASE_URL}${href}` === pathname ||
  `${import.meta.env.BASE_URL}${href}` === pathname.replace(/\/$/, "");
---

<a
  href={`${href}`}
  class:list={[
    className,
    "focus:",
    isActive
      ? "text-primary-blue font-semibold md:border-b-2 md:border-primary-blue"
      : "",
  ]}
  {...props}
>
  <slot />
</a>
